{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom"]
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.tsx", "src/**/__mocks__", "node_modules", "demo", "website", "docs", "*.sh"]
}
